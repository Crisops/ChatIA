---
import Layout from "../layouts/Layout.astro";
import ContainerMessage from "../components/ContainerMessage";
import FormMessage from "../components/FormMessage";
import InformationProgressIA from "../components/InformationProgressIA";
---

<Layout title="Welcome to Astro.">
  <div>
    <main>
      <ContainerMessage client:idle />
    </main>
    <FormMessage client:idle />
    <InformationProgressIA client:idle/>
  </div>
</Layout>

<style>
  div {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  main {
    width: 500px;
    height: 750px;
    background-color: #080808;
    overflow-y: auto;
    padding: 12px;
    border: 1px solid #1d1d1d;
    box-shadow: 0px 0px 15px #676767;
  }
</style>
